{
  "name": "coffeetimer",
  "private": true,
  "author": {
    "name": "Artem Sapegin",
    "url": "https://sapegin.me"
  },
  "homepage": "https://github.com/sapegin/coffeetimer",
  "repository": "sapegin/coffeetimer",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "browserslist": [
    ">1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "scripts": {
    "start": "pwa watch",
    "build": "pwa export --routes /",
    "pretest": "npm run lint && npm run typecheck",
    "test": "true",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@reach/dialog": "^0.10.0",
    "@xstate/react": "^0.8.1",
    "howler": "^2.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-spring": "^8.0.27",
    "react-storage-hooks": "^4.0.0",
    "styled-components": "^5.1.0",
    "tamia": "5.6.0",
    "xstate": "^4.9.0"
  },
  "devDependencies": {
    "@pwa/cli": "^0.5.4",
    "@pwa/plugin-sw-workbox": "^0.5.0",
    "@pwa/plugin-typescript": "^0.5.0",
    "@pwa/preset-react": "^0.5.0",
    "@types/howler": "^2.1.2",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-tamia": "^7.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,md}": "prettier --write"
  }
}
